<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.pithos.notebook</id>
  <name>Pithos Notebook</name>
  <summary>Private, encrypted markdown notebook</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <developer id="com.github.iamcarrasco">
    <name>iamcarrasco</name>
  </developer>

  <description>
    <p>
      Pithos Notebook is an offline encrypted markdown notebook for Linux.
      Your notes never leave your machine. AES-256-GCM encryption with
      PBKDF2 key derivation keeps your data private.
    </p>
    <p>Features:</p>
    <ul>
      <li>AES-256-GCM encryption with PBKDF2 (600k iterations)</li>
      <li>Source editor with live HTML preview</li>
      <li>Mermaid diagram rendering</li>
      <li>Folders, tags, and full-text search</li>
      <li>Tabs for working with multiple notes</li>
      <li>Named snapshots and version history</li>
      <li>Drag-and-drop encrypted image embedding</li>
      <li>Export as Markdown or HTML</li>
      <li>Daily notes and templates</li>
      <li>Dark mode with system theme support</li>
    </ul>
  </description>

  <launchable type="desktop-id">com.pithos.notebook.desktop</launchable>

  <url type="homepage">https://github.com/iamcarrasco/Pithos-Notebook</url>
  <url type="bugtracker">https://github.com/iamcarrasco/Pithos-Notebook/issues</url>
  <url type="vcs-browser">https://github.com/iamcarrasco/Pithos-Notebook</url>

  <branding>
    <color type="primary" scheme_preference="light">#e8f0fe</color>
    <color type="primary" scheme_preference="dark">#1a237e</color>
  </branding>

  <content_rating type="oars-1.1" />

  <supports>
    <control>keyboard</control>
    <control>pointing</control>
  </supports>

  <requires>
    <display_length compare="ge">768</display_length>
  </requires>

  <releases>
    <release version="0.1.1" date="2025-02-22">
      <description>
        <p>Encrypted image storage, export fix, save notification fix.</p>
      </description>
    </release>
    <release version="0.1.0" date="2025-02-19">
      <description>
        <p>Initial release â€” offline encrypted markdown notebook.</p>
      </description>
    </release>
  </releases>
</component>
